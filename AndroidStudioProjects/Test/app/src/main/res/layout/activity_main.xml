<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        cardview:cardElevation="4dp"
        cardview:cardBackgroundColor="#0e191d"
        cardview:cardCornerRadius="5dp"
        android:padding="16dp"
        android:id="@+id/cv1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl1"
            android:padding="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ambulance_img"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/desc"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amb_text1"
                android:layout_toRightOf="@+id/ambulance_img"
                android:layout_toEndOf="@+id/ambulance_img"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="@string/s1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amb_text2"
                android:layout_toRightOf="@+id/ambulance_img"
                android:layout_toEndOf="@+id/ambulance_img"
                android:layout_below="@+id/amb_text1"
                android:text="@string/s2"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        android:id="@+id/cv2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl2"
            android:padding="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fire_img"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/desc"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fire_text1"
                android:layout_toRightOf="@+id/fire_img"
                android:layout_toEndOf="@+id/fire_img"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="@string/s3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fire_text2"
                android:layout_toRightOf="@+id/fire_img"
                android:layout_toEndOf="@+id/fire_img"
                android:layout_below="@+id/fire_text1"
                android:text="@string/s2"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        cardview:contentPaddingTop="5dp"
        android:id="@+id/cv3"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl3"
            android:padding="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/police_img"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/desc"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/police_text1"
                android:layout_toRightOf="@+id/police_img"
                android:layout_toEndOf="@+id/police_img"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="@string/s5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/police_text2"
                android:layout_toRightOf="@+id/police_img"
                android:layout_toEndOf="@+id/police_img"
                android:layout_below="@+id/police_text1"
                android:text="@string/s6"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>